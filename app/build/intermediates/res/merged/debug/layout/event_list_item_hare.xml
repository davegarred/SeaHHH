<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/event_list_item_date"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:text="Tue\nFeb 26"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/event_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some Event - and more details, etc., etc."
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_list_item_hare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hare A and hare B and hare C"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>